clear;
X=[3 4; 3 8; 2 6; 4 6; 3 0; 1 -2; 5 -2; 3 -4; 3 3.9]; // 学習データ
y=[1 1 1 1 -1 -1 -1 -1 -1]'; // 教師信号
[n, d] = size(X);
X = [ones(n,1), X];  // 特徴ベクトルに0次元目を追加

plot2d(X(:,2), X(:,3), -4, rect=[0,-5,6,10])

w = inv(X' * X) * X' * y;   // w=lsq(X, y); でもよい

printf("Results: w0 = %5.2f, w1 = %5.2f, w2 = %5.2f\n",w(1), w(2), w(3))
